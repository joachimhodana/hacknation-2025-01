{
  "name": "core",
  "version": "1.0.50",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server src/index.ts",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "better-auth:secret": "bunx @better-auth/cli secret",
    "better-auth:generate": "bunx @better-auth/cli generate",
    "better-auth:migrate": "bunx @better-auth/cli migrate",
    "create-admin": "bun run scripts/create-admin.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.11",
    "@elysiajs/server-timing": "^1.4.0",
    "@elysiajs/static": "^1.4.7",
    "better-auth": "^1.4.5",
    "drizzle-orm": "^0.45.0",
    "elysia": "latest",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.31.8"
  },
  "module": "src/index.js"
}
